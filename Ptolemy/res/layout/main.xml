<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/menu"
        layout="@layout/menu_home" />

    <Button
        android:id="@+id/ButtonMITClassLaunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadClasses"
        android:text="@string/launch_mitclasses" />

    <Button
        android:id="@+id/ButtonLaunchMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchPtolemyMap"
        android:text="@string/launch_map" />

    <Button
        android:id="@+id/ButtonLaunchPrepopulate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchTouchstoneLogin"
        android:text="@string/launch_prepopulate" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="@string/wifiLocalizerStart" 
        android:onClick="launchWifiDisplay"/>

    <Button
        android:id="@+id/ButtonLaunchResetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="resetData"
        android:text="@string/launch_resetdata" />

    <TextView
        android:id="@+id/SelectedClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_list" />

</LinearLayout>