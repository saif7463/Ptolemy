<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/nav"
        layout="@layout/menu_home" />

    <edu.mit.pt.maps.PtolemyMapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/nav"
        android:apiKey="@string/map_key"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/meta_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true" >

        <ImageButton
            android:id="@+id/place_confirm_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_menu_navigate"
            android:contentDescription="@string/navigate"
            android:background="@drawable/navigate_bg" />

        <TextView
            android:id="@+id/place_confirm_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/bookmark_edit_button"
            android:layout_toRightOf="@+id/place_confirm_button"
            android:background="@drawable/black_50"
            android:ellipsize="end"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#FFF"
            android:gravity="center_vertical"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/bookmark_edit_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_menu_edit"
            android:contentDescription="@string/edit"
            android:background="@drawable/bookmark_edit_bg" />
    </RelativeLayout>

</RelativeLayout>