<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <ImageView
        android:id="@+id/first_launch_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/loading"
        android:src="@drawable/first_launch" />

    <ProgressBar
        android:id="@+id/first_launch_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_launch_img"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/ptolemy_progress"
        android:visibility="gone" />

    <TextView
        android:id="@+id/first_launch_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_launch_progress"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/loading" />

</RelativeLayout>