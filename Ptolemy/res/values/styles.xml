<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Nav">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/menu_bg_img</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="NavButtonHome" parent="@android:style/Widget.Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:src">@drawable/ic_menu_home</item>
        <item name="android:background">@drawable/ic_menu_home_press</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="NavButtonBack" parent="@android:style/Widget.Button">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/menu_home_caret</item>
    </style>
    
    <style name="NavButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ic_menu_home_press</item>
    </style>
    
    <style name="NavTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    
    <style name="BlueButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/blue_button_bg</item>
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="GreenButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/green_button_bg</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>